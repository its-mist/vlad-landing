generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model About {
  id          Int     @id @default(autoincrement())
  titleRu     String
  titleEn     String
  subtitleRu  String  @default("")
  subtitleEn  String  @default("")
  bioRu       String
  bioEn       String
  photoUrl    String?
}

model Project {
  id            Int      @id @default(autoincrement())
  titleRu       String
  titleEn       String
  descriptionRu String?
  descriptionEn String?
  youtubeUrl    String
  order         Int      @default(0)
  visible       Boolean  @default(true)
  createdAt     DateTime @default(now())
}

model Contact {
  id    Int    @id @default(autoincrement())
  type  String
  value String
  order Int    @default(0)
}

model Settings {
  id              Int    @id @default(autoincrement())
  backgroundVideo String
  siteTitle       String @default("Producer Portfolio")
}

model GalleryPhoto {
  id        Int      @id @default(autoincrement())
  url       String
  caption   String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
}
